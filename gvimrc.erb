set vb t_vb=
<% platform = `uname` %>
  <% case platform 
  when "Linux" then %>
set guifont=Liberation\ Mono\ Bold\ 14

set guitablabel=%t
set columns=100
set lines=35
<% when "Darwin" then %>
set guifont=Menlo:h16

let fustate=0
set fuoptions=maxhorz,maxvert
set transparency=5
set columns=120
set lines=45
func ToggleFullscreen()
  if fustate == 0
    let fustate=1
    set fullscreen
  else
    let fustate=0
    set nofullscreen
  endif
  return ''
endfunction
map <expr> <D-F> ToggleFullscreen() 
set guioptions=egmrLt
set guitablabel=%t
<% end %>
