set vb t_vb=
<% if platform == "Linux" %>
set guifont=Liberation\ Mono\ Bold\ 14

set guitablabel=%t
set columns=100
set lines=35
<% else if platform == "Darwin" %>
set guifont=Monaco:h16

let fustate=0
set fuoptions=maxhorz,maxvert
set transparency=5
set columns=120
set lines=45
func ToggleFullscreen()
  if fustate == 0
    let fustate=1
    set fullscreen
  else
    let fustate=0
    set nofullscreen
  endif
  return ''
endfunction
map <expr> <D-F> ToggleFullscreen() 
set guioptions=egmrLt
set guitablabel=%t
<% end %>
